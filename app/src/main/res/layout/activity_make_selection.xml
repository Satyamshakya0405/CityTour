<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Common.loginsignup.make_selection">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icons_back"
            android:padding="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAKE\nSELECTION"
            android:fontFamily="@font/acme"
            android:textColor="#000000"
            android:textSize="34sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provide Your accounts Email "
            android:fontFamily="@font/antic"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="center"/>
       <RelativeLayout
           android:layout_margin="20dp"
           android:layout_width="match_parent"
           android:layout_height="120dp"
           android:background="#1600BCD4">
           <ImageView
               android:id="@+id/phone"
               android:layout_marginTop="30dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icons_phone"/>
           <TextView
               android:id="@+id/sms"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="via sms :"
               android:layout_marginLeft="5dp"
               android:layout_toRightOf="@id/phone"
               android:layout_marginTop="20dp"
               android:textSize="20sp"
               android:fontFamily="@font/antic"
               android:textColor="#000000"/>
           <TextView
               android:layout_below="@id/sms"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="+918630406320"
               android:layout_marginLeft="5dp"
               android:layout_toRightOf="@id/phone"
               android:layout_marginTop="10dp"
               android:textSize="20sp"
               android:fontFamily="@font/antic"
               android:textColor="#000000"/>
           <Button
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="#00000000"/>
       </RelativeLayout>
        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#1600BCD4">
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/image_email"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_email"/>
            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="via email :"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image_email"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:fontFamily="@font/antic"
                android:textColor="#000000"/>
            <TextView
                android:layout_below="@id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello@gamail.com"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/image_email"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:fontFamily="@font/antic"
                android:textColor="#000000"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00000000"/>
        </RelativeLayout>



    </LinearLayout>
</ScrollView>